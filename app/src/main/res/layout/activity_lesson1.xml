<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Это первый макет созданный для GeekBrains"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Укажите информацию о себе"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="italic"
            android:typeface="normal" />

        <EditText
            android:id="@+id/FirstNameEditText"
            android:layout_width="300dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Имя" />

        <EditText
            android:id="@+id/SecondNameEditText"
            android:layout_width="300dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Фамилия" />

        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Выберите ваш пол"
            android:textSize="18sp" />/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxMale"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Мужской" />

            <CheckBox
                android:id="@+id/checkBoxFemale"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Женский" />

        </LinearLayout>

        <Switch
            android:id="@+id/switchAccept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Согласны ли вы предоставить свои данные?" />

        <TextView
            android:id="@+id/textViewSure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вы точно уверены?"
            android:layout_margin="15dp"/>

        <ToggleButton
            android:id="@+id/toggleButtonSure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="ToggleButton" />

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:shadowColor="#5C2626"
            android:text="Отправить данные"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#CDDC39"
            app:rippleColor="#BF1919" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>